{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "build/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "build/manifest.json"
    },
    {
      "src": "/logo.png",
      "dest": "build/logo.png"
    },
    {
      "src": "/favicon.ico",
      "dest": "build/logo.png"
    },
    {
      "src": "/(.*)",
      "dest": "build/index.html"
    }
  ]
}